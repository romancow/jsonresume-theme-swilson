@import "colors"
@import "fonts"

header#basics
	color-secondary()
	height: 1.4in
	padding: 12px

	.contact
		justify-content: center
		font-size: 11pt

		& > *
			flex-direction: row

			i.fa
				width: 20px
				height: 20px
				margin-right: 14px

	.title
		flex: 1
		align-items: center
		justify-content: center
		text-transform: uppercase
	
		> *
			font-weight: normal

		.name
			font-size: 30pt
			border: 2pt solid $colors.secondary.font
			padding: 6px 12px

		.label
			font-family: $fonts.secondary
			font-size: 20pt


	.socials
		flex-direction: row
		align-items: center
		font-size: 35pt

		.social
			margin-right: 24px