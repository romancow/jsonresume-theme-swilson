@import "colors"

.section#references

	.section-content

		figure.reference
			padding: 8px
			font-size: 11pt

			figcaption
				cite
					font-style: normal

				.position
					font-style: oblique
					font-size: 10pt

					&:not(:first-child)::before
						content: ", "

				.at
					display: flex
					font-weight: bold

			blockquote
				margin-top: 3pt
				position: relative
				color: $colors.accent.font
				font-style: italic
				padding-left: 10px

				&::before, & > :last-child::after
					position: absolute
					font-family: "Font Awesome 6 Free"
					font-weight: 900
					font-size: 60%

				&::before
					content: "\f10d"
					left: 1px

				& > :last-child::after
					content: "\f10e"
